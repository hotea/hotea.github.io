---
import BaseLayout from '../layouts/BaseLayout.astro';
import { projects } from '../data/projects';
---

<BaseLayout title="Projects - Hotea" description="A collection of my projects and experiments.">
  <section class="max-w-4xl mx-auto px-6 pt-20 pb-8">
    <h1 class="text-3xl font-bold tracking-tight mb-2">Projects</h1>
    <p class="text-text-muted">A collection of things I've built and open-sourced.</p>
  </section>

  <section class="max-w-4xl mx-auto px-6 pb-20">
    <div class="grid gap-4 sm:grid-cols-2">
      {projects.map((project) => (
        <div class="group p-6 rounded-xl border border-border hover:border-accent/50 hover:shadow-sm transition-all">
          <div class="flex items-start justify-between mb-2">
            <h2 class="font-semibold group-hover:text-accent transition-colors">
              {project.title}
            </h2>
            <div class="flex items-center gap-2 shrink-0 ml-4">
              {project.github && (
                <a
                  href={project.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-text-muted hover:text-accent transition-colors"
                  aria-label={`${project.title} source code`}
                >
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              )}
              <a
                href={project.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-text-muted hover:text-accent transition-colors"
                aria-label={`Visit ${project.title}`}
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                </svg>
              </a>
            </div>
          </div>
          <p class="text-sm text-text-muted mb-4 leading-relaxed">
            {project.description}
          </p>
          <div class="flex flex-wrap gap-2">
            {project.tags.map((tag) => (
              <span class="text-xs px-2 py-0.5 rounded-full bg-surface-alt text-text-muted">
                {tag}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>
