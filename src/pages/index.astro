---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { projects } from '../data/projects';

const recentPosts = (await getCollection('blog'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

const featuredProjects = projects.filter((p) => p.featured);
---

<BaseLayout title="Hotea - Developer">
  <!-- Hero -->
  <section class="max-w-4xl mx-auto px-6 pt-20 pb-16">
    <div class="max-w-2xl">
      <p class="text-accent font-mono text-sm mb-4">Hello, I'm</p>
      <h1 class="text-4xl sm:text-5xl font-bold tracking-tight text-primary mb-4">
        Hotea
      </h1>
      <p class="text-lg text-text-muted leading-relaxed mb-8">
        A developer who loves building things for the web.
        Interested in algorithms, open source, and elegant solutions to complex problems.
      </p>
      <div class="flex gap-4">
        <a
          href="/projects"
          class="inline-flex items-center px-5 py-2.5 bg-accent text-white text-sm font-medium rounded-lg hover:bg-accent-light transition-colors"
        >
          View Projects
        </a>
        <a
          href="/blog"
          class="inline-flex items-center px-5 py-2.5 border border-border text-sm font-medium rounded-lg text-text hover:border-accent hover:text-accent transition-colors"
        >
          Read Blog
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="max-w-4xl mx-auto px-6 py-16 border-t border-border">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-semibold tracking-tight">Featured Projects</h2>
      <a href="/projects" class="text-sm text-accent hover:underline">View all &rarr;</a>
    </div>
    <div class="grid gap-4 sm:grid-cols-2">
      {featuredProjects.map((project) => (
        <a
          href={project.url}
          target="_blank"
          rel="noopener noreferrer"
          class="group block p-6 rounded-xl border border-border hover:border-accent/50 hover:shadow-sm transition-all"
        >
          <h3 class="font-semibold mb-2 group-hover:text-accent transition-colors">
            {project.title}
          </h3>
          <p class="text-sm text-text-muted mb-4 leading-relaxed">
            {project.description}
          </p>
          <div class="flex flex-wrap gap-2">
            {project.tags.map((tag) => (
              <span class="text-xs px-2 py-0.5 rounded-full bg-surface-alt text-text-muted">
                {tag}
              </span>
            ))}
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- Recent Posts -->
  <section class="max-w-4xl mx-auto px-6 py-16 border-t border-border">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-semibold tracking-tight">Recent Posts</h2>
      <a href="/blog" class="text-sm text-accent hover:underline">All posts &rarr;</a>
    </div>
    {recentPosts.length > 0 ? (
      <div class="space-y-6">
        {recentPosts.map((post) => (
          <a href={`/blog/${post.id.replace(/\.mdx?$/, '')}`} class="group block">
            <article class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-6">
              <time class="text-sm text-text-muted font-mono shrink-0 w-28">
                {post.data.date.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                })}
              </time>
              <div>
                <h3 class="font-medium group-hover:text-accent transition-colors">
                  {post.data.title}
                </h3>
                {post.data.description && (
                  <p class="text-sm text-text-muted mt-1">{post.data.description}</p>
                )}
              </div>
            </article>
          </a>
        ))}
      </div>
    ) : (
      <p class="text-text-muted">No posts yet. Stay tuned!</p>
    )}
  </section>
</BaseLayout>
