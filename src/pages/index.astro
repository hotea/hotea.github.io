---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { fetchRepos, getLangColor } from '../data/github';

const recentPosts = (await getCollection('blog'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

const repos = (await fetchRepos()).slice(0, 4);
---

<BaseLayout title="Hotea - Developer">
  <!-- Hero -->
  <section class="max-w-4xl mx-auto px-6 pt-20 pb-16">
    <div class="max-w-2xl">
      <p class="text-accent font-mono text-sm mb-4">Hello, I'm</p>
      <h1 class="text-4xl sm:text-5xl font-bold tracking-tight text-primary mb-4">
        Hotea
      </h1>
      <p class="text-lg text-text-muted leading-relaxed mb-8">
        A developer who loves building things for the web.
        Interested in algorithms, open source, and elegant solutions to complex problems.
      </p>
      <div class="flex gap-4">
        <a
          href="/projects"
          class="inline-flex items-center px-5 py-2.5 bg-accent text-white text-sm font-medium rounded-lg hover:bg-accent-light transition-colors"
        >
          View Projects
        </a>
        <a
          href="/blog"
          class="inline-flex items-center px-5 py-2.5 border border-border text-sm font-medium rounded-lg text-text hover:border-accent hover:text-accent transition-colors"
        >
          Read Blog
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="max-w-4xl mx-auto px-6 py-16 border-t border-border">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-semibold tracking-tight">Projects</h2>
      <a href="/projects" class="text-sm text-accent hover:underline">View all &rarr;</a>
    </div>
    {repos.length > 0 ? (
      <div class="grid gap-4 sm:grid-cols-2">
        {repos.map((repo) => (
          <a
            href={repo.homepage || repo.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group block p-6 rounded-xl border border-border hover:border-accent/50 hover:shadow-sm transition-all"
          >
            <div class="flex items-start justify-between mb-2">
              <h3 class="font-semibold group-hover:text-accent transition-colors truncate">
                {repo.name}
              </h3>
              {repo.stars > 0 && (
                <span class="flex items-center gap-0.5 text-xs text-text-muted shrink-0 ml-3">
                  <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8 .25a.75.75 0 01.673.418l1.882 3.815 4.21.612a.75.75 0 01.416 1.279l-3.046 2.97.719 4.192a.75.75 0 01-1.088.791L8 12.347l-3.766 1.98a.75.75 0 01-1.088-.79l.72-4.194L.818 6.374a.75.75 0 01.416-1.28l4.21-.611L7.327.668A.75.75 0 018 .25z"/>
                  </svg>
                  {repo.stars}
                </span>
              )}
            </div>
            <p class="text-sm text-text-muted mb-4 leading-relaxed line-clamp-2">
              {repo.description || 'No description'}
            </p>
            {repo.language && (
              <span class="flex items-center gap-1.5 text-xs text-text-muted">
                <span class="w-2.5 h-2.5 rounded-full" style={`background-color: ${getLangColor(repo.language)}`} />
                {repo.language}
              </span>
            )}
          </a>
        ))}
      </div>
    ) : (
      <p class="text-text-muted">
        Visit my <a href="https://github.com/hotea" class="text-accent hover:underline">GitHub</a> to see projects.
      </p>
    )}
  </section>

  <!-- Recent Posts -->
  <section class="max-w-4xl mx-auto px-6 py-16 border-t border-border">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-semibold tracking-tight">Recent Posts</h2>
      <a href="/blog" class="text-sm text-accent hover:underline">All posts &rarr;</a>
    </div>
    {recentPosts.length > 0 ? (
      <div class="space-y-6">
        {recentPosts.map((post) => (
          <a href={`/blog/${post.id.replace(/\.mdx?$/, '')}`} class="group block">
            <article class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-6">
              <time class="text-sm text-text-muted font-mono shrink-0 w-28">
                {post.data.date.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                })}
              </time>
              <div>
                <h3 class="font-medium group-hover:text-accent transition-colors">
                  {post.data.title}
                </h3>
                {post.data.description && (
                  <p class="text-sm text-text-muted mt-1">{post.data.description}</p>
                )}
              </div>
            </article>
          </a>
        ))}
      </div>
    ) : (
      <p class="text-text-muted">No posts yet. Stay tuned!</p>
    )}
  </section>
</BaseLayout>
