---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const REPO = 'hotea/hotea.github.io';
const BRANCH = 'master';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const today = new Date().toISOString().split('T')[0];
const template = `---
title: "New Post"
description: ""
date: ${today}
tags: []
---

Write your content here...
`;
const newPostUrl = `https://github.com/${REPO}/new/${BRANCH}/src/content/blog?filename=new-post.md&value=${encodeURIComponent(template)}`;
---

<BaseLayout title="Blog - Hotea" description="Thoughts on programming, technology, and more.">
  <section class="max-w-4xl mx-auto px-6 pt-20 pb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold tracking-tight mb-2">Blog</h1>
        <p class="text-text-muted">Thoughts on programming, technology, and more.</p>
      </div>
      <a
        href={newPostUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-1.5 px-4 py-2 bg-accent text-white text-sm font-medium rounded-lg hover:bg-accent-light transition-colors shrink-0"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        New Post
      </a>
    </div>
  </section>

  <section class="max-w-4xl mx-auto px-6 pb-20">
    {posts.length > 0 ? (
      <div class="space-y-8">
        {posts.map((post) => (
          <a href={`/blog/${post.id.replace(/\.mdx?$/, '')}`} class="group block">
            <article class="py-4 border-b border-border last:border-b-0">
              <div class="flex flex-col sm:flex-row sm:items-start gap-2 sm:gap-6">
                <time class="text-sm text-text-muted font-mono shrink-0 w-28 pt-0.5">
                  {post.data.date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric',
                  })}
                </time>
                <div class="flex-1">
                  <h2 class="text-lg font-semibold group-hover:text-accent transition-colors mb-1">
                    {post.data.title}
                  </h2>
                  {post.data.description && (
                    <p class="text-text-muted text-sm leading-relaxed">
                      {post.data.description}
                    </p>
                  )}
                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2 mt-3">
                      {post.data.tags.map((tag: string) => (
                        <span class="text-xs px-2 py-0.5 rounded-full bg-surface-alt text-text-muted">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            </article>
          </a>
        ))}
      </div>
    ) : (
      <p class="text-text-muted py-8">No posts yet. Stay tuned!</p>
    )}
  </section>
</BaseLayout>
